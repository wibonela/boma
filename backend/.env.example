# Application
APP_NAME=BOMA
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:19006","http://localhost:19000","exp://localhost:19000"]

# Server
HOST=0.0.0.0
PORT=8000

# Database (Local PostgreSQL - use docker-compose)
# For development: docker-compose up -d postgres
DATABASE_URL=postgresql+asyncpg://boma_user:boma_password@localhost:5432/boma_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Local File Storage
UPLOAD_DIR=uploads
STATIC_URL=/static
MAX_UPLOAD_SIZE_MB=10

# Payment Gateway - AzamPay (Tanzania Mobile Money & Cards)
# Get credentials from: https://developers.azampay.co.tz/
# IMPORTANT: Configure webhook URL in AzamPay dashboard:
#   Production: https://api.getboma.org/api/v1/bookings/webhooks/azampay
#   Local Dev: Use ngrok or localhost tunnel
AZAMPAY_CLIENT_ID=your_azampay_client_id
AZAMPAY_CLIENT_SECRET=your_azampay_client_secret
AZAMPAY_APP_NAME=boma
AZAMPAY_API_URL=https://sandbox.azampay.co.tz
AZAMPAY_WEBHOOK_SECRET=your_webhook_secret

# Payment Gateway - Selcom (Optional - Tanzania Mobile Money & Cards)
# Uncomment and configure if you want to use Selcom
#SELCOM_API_KEY=your_selcom_api_key
#SELCOM_API_SECRET=your_selcom_api_secret
#SELCOM_VENDOR_ID=your_vendor_id
#SELCOM_API_URL=https://apigw.selcommobile.com
#SELCOM_WEBHOOK_SECRET=your_webhook_secret

# Email (SMTP - Optional, for password reset & notifications)
# You can use Gmail, SendGrid, or any SMTP server
# For Gmail: smtp.gmail.com, port 587, use app password
#SMTP_HOST=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USER=your_email@gmail.com
#SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@boma.co.tz
SMTP_FROM_NAME=BOMA

# Localization & Regional Settings
DEFAULT_COUNTRY=TZ
DEFAULT_CURRENCY=TZS
DEFAULT_TIMEZONE=Africa/Dar_es_Salaam
SUPPORTED_COUNTRIES=["TZ"]
SUPPORTED_CURRENCIES=["TZS"]

# Business Rules
PLATFORM_FEE_PERCENTAGE=15.0
BOOKING_EXPIRY_MINUTES=30
DEPOSIT_HOLD_DAYS=7
MINIMUM_BOOKING_HOURS=4
MAXIMUM_ADVANCE_BOOKING_DAYS=365

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=["jpg","jpeg","png","webp"]
ALLOWED_DOCUMENT_EXTENSIONS=["pdf","jpg","jpeg","png"]

# Security
# IMPORTANT: Generate a strong secret key for production
# You can use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Admin
ADMIN_EMAIL=admin@boma.co.tz
ADMIN_INITIAL_PASSWORD=changeme

# Monitoring (Optional - Sentry for error tracking)
#SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
